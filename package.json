{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel",
    "npm-publish": "lerna publish --no-private",
    "lint": "eslint packages/**"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "eslint": "^8.40.0",
    "eslint-config-universe": "^11.3.0",
    "lerna": "^6.6.2"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": ["node_modules", "dist", "tmp", ".next"],
    "rules": {
      "max-len": ["warn", {
        "code": 120
      }]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true
  }
}
