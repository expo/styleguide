{
  "name": "styleguide-root",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel",
    "npm-publish": "lerna publish --no-private",
    "lint": "eslint packages/example-native packages/search-ui packages/styleguide packages/styleguide-base packages/styleguide-icons packages/styleguide-native"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "eslint-plugin-react-hooks": "^4.6.2"
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^18.3.12",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^14.0.0",
    "lerna": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.36.0",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.6.3"
  },
  "packageManager": "yarn@4.7.0",
  "eslintConfig": {
    "root": true,
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 120
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    "out",
    "tmp",
    ".expo",
    ".next",
    "packages/example-native/expo-env.d.ts",
    "packages/styleguide-icons/index.*",
    "packages/styleguide-icons/mergeClasses.*"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5"
  }
}
