{
  "name": "root",
  "private": true,
  "scripts": {
    "rename-icons": "find ./common/svg -depth -type f \\( -name '*.svg' ! -name '*-icon.svg' \\) -exec sh -c 'mv \"$1\" \"${1%.svg}-icon.svg\"' _ {} \\;",
    "build:icons": "yarn rename-icons && yarn lerna run build:icons",
    "build": "yarn lerna run build"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "volta": {
    "node": "16.0.0"
  }
}
