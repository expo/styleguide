{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel",
    "npm-publish": "lerna publish --no-private",
    "lint": "eslint packages/**"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^18.2.7",
    "eslint": "^8.53.0",
    "eslint-config-universe": "^12.0.0",
    "lerna": "^6.6.2",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.23.0",
    "rollup-plugin-copy": "^3.4.0",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": ["node_modules", "dist", "tmp", ".next"],
    "rules": {
      "max-len": ["warn", {
        "code": 120
      }]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true
  }
}
