{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "dev": "lerna run dev --parallel",
    "npm-publish": "lerna publish --no-private",
    "lint": "eslint packages/**"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.37",
    "eslint": "^8.56.0",
    "eslint-config-universe": "^12.0.0",
    "lerna": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules",
      "dist",
      "tmp",
      ".next"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 120
        }
      ]
    }
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5"
  }
}
