{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2018",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/*.ts"],
  "exclude": ["node_modules"]
}
