{
  "name": "example-web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn clean && yarn update-icons && next dev",
    "build": "next build",
    "analyze-build": "ANALYZE=true next build",
    "update-icons": "node ./merge-icon-imports.js",
    "clean": "rimraf .next .vercel",
    "lint": "yarn eslint ."
  },
  "dependencies": {
    "@expo/styleguide": "workspace:*",
    "@expo/styleguide-icons": "workspace:*",
    "@expo/styleguide-search-ui": "workspace:*",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.4",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.17.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.4",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "*",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "^3.4.17"
  },
  "peerDependencies": {
    "cmdk": "*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "universe/web",
      "next/core-web-vitals",
      "plugin:tailwindcss/recommended"
    ],
    "rules": {
      "@next/next/no-html-link-for-pages": [
        "error"
      ],
      "tailwindcss/classnames-order": "off",
      "tailwindcss/enforces-negative-arbitrary-values": "error",
      "tailwindcss/enforces-shorthand": "error",
      "tailwindcss/no-arbitrary-value": "off",
      "tailwindcss/no-custom-classname": [
        "error",
        {
          "cssFiles": [],
          "whitelist": [
            "dark-theme"
          ],
          "callees": [
            "mergeClasses"
          ]
        }
      ],
      "tailwindcss/no-unnecessary-arbitrary-value": [
        "error",
        {
          "callees": [
            "mergeClasses"
          ]
        }
      ]
    },
    "ignorePatterns": [
      "icon-imports.ts"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "es5",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "tailwindFunctions": [
      "mergeClasses"
    ]
  }
}
