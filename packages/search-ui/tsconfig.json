{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./index.ts"],
  "exclude": ["node_modules"]
}
